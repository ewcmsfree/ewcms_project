            <result name="input">/WEB-INF/page/site/channel/templateedit.jsp</result>
        </action>
        <action name="save" class="com.ewcms.core.site.web.TemplateAction" method="save">
            <result>/WEB-INF/page/site/channel/templateedit.jsp</result>
